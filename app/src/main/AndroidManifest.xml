<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidLibraryApp"
        tools:targetApi="31">
        <activity
            android:name=".WebViewActivity"
            android:exported="false" />
        <activity
            android:name=".FavouriteBooksActivity"
            android:exported="false"
            android:label="@string/fav_books_activity"/>
        <activity
            android:name=".CurrentlyReadingBooksActivity"
            android:exported="false"
            android:label="@string/currently_reading_books_activity"/>
        <activity
            android:name=".WantToReadBooksActivity"
            android:exported="false"
            android:label="@string/want_to_read_books_activity"/>
        <activity
            android:name=".ReadBooksActivity"
            android:exported="false"
            android:label="@string/already_read_books_activity"/>
        <activity
            android:name=".BookActivity"
            android:exported="false"
            android:label="@string/book_details_activity"/>
        <activity
            android:name=".AllBooksActivity"
            android:exported="false"
            android:label="@string/all_books_activity"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>